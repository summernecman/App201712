<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="frag_acct_role_tip"
            type="String" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0000000"
        android:orientation="vertical">
        <LinearLayout
            android:padding="5dp"
            android:background="@drawable/drawable_hv_acct_role_tip"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="16.5sp"
                    android:text="提示"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_close"
                    android:src="@drawable/icon_hv_close"
                    android:layout_alignParentRight="true"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/color_grey_300"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:text="您选择的角色为"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/color_hv_yelll"
                android:textSize="21sp"
                android:text="非驾驶员"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:id="@+id/tv_sure"
                android:text="确定"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/drawable_hv_bg_btn_login"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />
        </LinearLayout>
    </RelativeLayout>
</layout>
