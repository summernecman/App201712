<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_common="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item_main_msg_all"
            type="com.siweisoft.heavycenter.data.netd.msg.list.MsgsResBean.ResultsBean" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="5dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/hv_color_text_title"
                    android:textSize="@dimen/hv_dimen_text_title_aa"
                    android:text="@{item_main_msg_all.senderName}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.siweisoft.heavycenter.module.view.text.BgTextView
                    android:id="@+id/tv_des"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:visibility="gone"
                    style_common:color_one="@color/white"
                    style_common:stroke="1dp"
                    style_common:color_stroke="@color/color_hv_yelll"
                    style_common:corner="5dp"
                    style_common:color_txt="@color/color_hv_yelll"

                    style_common:color_two="@color/color_red_800"
                    style_common:stroke_two="2dp"
                    style_common:color_stroke_two="@color/color_hv_yelll"
                    style_common:corner_two="5dp"
                    style_common:color_txt_two="@color/white"
                    style_common:boo_one="false"
                    android:text="接受"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:textColor="@color/hv_color_text_date"
                    android:textSize="@dimen/hv_dimen_text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/hv_color_text"
                android:textSize="@dimen/hv_dimen_text_aa"
                android:text="@{item_main_msg_all.messageContent}"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <LinearLayout
                android:id="@+id/ll_fuction"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
                <com.siweisoft.heavycenter.module.view.text.BgTextView
                    android:id="@+id/bt_reject"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:visibility="visible"
                    style_common:color_one="@color/color_hv_yelll"
                    style_common:stroke="0dp"
                    style_common:color_stroke="@color/red"
                    style_common:corner="5dp"
                    style_common:color_txt="@color/white"

                    style_common:color_two="@color/color_red_800"
                    style_common:stroke_two="2dp"
                    style_common:color_stroke_two="@color/color_hv_yelll"
                    style_common:corner_two="5dp"
                    style_common:color_txt_two="@color/white"
                    style_common:boo_one="true"
                    android:text="拒绝"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.siweisoft.heavycenter.module.view.text.BgTextView
                    android:id="@+id/bt_agree"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:visibility="visible"
                    style_common:color_one="@color/color_hv_yelll"
                    style_common:stroke="0dp"
                    style_common:color_stroke="@color/red"
                    style_common:corner="5dp"
                    style_common:color_txt="@color/white"

                    style_common:color_two="@color/color_red_800"
                    style_common:stroke_two="2dp"
                    style_common:color_stroke_two="@color/color_hv_yelll"
                    style_common:corner_two="5dp"
                    style_common:color_txt_two="@color/white"
                    style_common:boo_one="true"
                    android:text="接受"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.siweisoft.heavycenter.module.view.text.BgTextView
                    android:id="@+id/bt_mana"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:visibility="gone"
                    style_common:color_one="@color/color_hv_yelll"
                    style_common:stroke="0dp"
                    style_common:color_stroke="@color/red"
                    style_common:corner="5dp"
                    style_common:color_txt="@color/white"

                    style_common:color_two="@color/color_red_800"
                    style_common:stroke_two="2dp"
                    style_common:color_stroke_two="@color/color_hv_yelll"
                    style_common:corner_two="5dp"
                    style_common:color_txt_two="@color/white"
                    style_common:boo_one="true"
                    android:text="设为管理员"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
