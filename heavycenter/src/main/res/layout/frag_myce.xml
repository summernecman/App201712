<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_item="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="frag_myce"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content_acct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_base_graybg"
        android:orientation="vertical">
<include
    layout="@layout/item_myce_head"/>

        <com.android.lib.view.item.ItemView
            android:id="@+id/item_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style_item:txt_left="上海路灯"
            style_item:txt_right="5"
            style_item:iv_left="@drawable/icon_hv_myce_unit"
            style_item:iv_right="@drawable/icon_arraw"
            style_item:txt_right_bg="@drawable/bg_cricle_yel"
            style_item:bg_divider="@color/color_item_content_gap"
            />


        <com.android.lib.view.item.ItemView
            android:id="@+id/item_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style_item:txt_left="仓库管理"
        style_item:txt_right="5"
        style_item:iv_left="@drawable/icon_hv_myce_store"
        style_item:iv_right="@drawable/icon_arraw"
            style_item:txt_right_bg="@drawable/bg_cricle_yel"
        style_item:bg_divider="@color/color_item_content_gap"
        />

        <com.android.lib.view.item.ItemView
            android:id="@+id/item_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style_item:txt_left="物料管理"
            style_item:txt_right="5"
            style_item:iv_left="@drawable/icon_hv_myce_good"
            style_item:iv_right="@drawable/icon_arraw"
            style_item:txt_right_bg="@drawable/bg_cricle_yel"
            style_item:bg_divider="@color/color_item_content_gap"
            />

        <com.android.lib.view.item.ItemView
            android:id="@+id/item_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style_item:txt_left="用户管理"
            style_item:txt_right="5"
            style_item:iv_left="@drawable/icon_hv_myce_user"
            style_item:iv_right="@drawable/icon_arraw"
            style_item:txt_right_bg="@drawable/bg_cricle_yel"
            style_item:bg_divider="@color/color_item_content_gap"
            />

        <com.android.lib.view.item.ItemView
            android:id="@+id/item_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style_item:txt_left="车辆管理"
            style_item:txt_right="5"
            style_item:iv_left="@drawable/icon_hv_myce_car"
            style_item:iv_right="@drawable/icon_arraw"
            style_item:txt_right_bg="@drawable/bg_cricle_yel"
            style_item:bg_divider="@color/color_item_content_gap"
            />

        <com.android.lib.view.item.ItemView
            android:layout_marginTop="10dp"
            android:id="@+id/item_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            style_item:bg_divider="@color/color_item_content_gap"
            style_item:iv_left="@drawable/icon_hv_myce_setting"
            style_item:iv_right="@drawable/icon_arraw"
            style_item:txt_left="设置"
            style_item:txt_right=""
          />

    </LinearLayout>
</layout>
