<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_common="http://schemas.android.com/apk/res-auto"
    xmlns:style_toptypeview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">
    <data>
        <variable
            name="frag_main_msg"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/color_block_back"
        android:orientation="vertical">

        <com.android.lib.view.title.TitleView
            android:id="@+id/title"
            style_common:iv_left ="@drawable/icon_hv_person"
            style_common:txt_mid ="消息"
            style_common:iv_right = "@drawable/icon_hv_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.siweisoft.heavycenter.module.view.menu.TopTypeView
            android:id="@+id/topview"
            style_toptypeview:txts="全部,运输,车辆,公告,系统"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



            <LinearLayout
                android:layout_below="@+id/topview"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:orientation="vertical"
            android:id="@+id/ll_cntent"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


            </LinearLayout>

            <com.siweisoft.heavycenter.module.view.menu.ScrollMenu
                android:id="@+id/scrollmenu"
                android:layout_marginTop="-3dp"
                android:layout_below="@id/topview"
                android:layout_width="match_parent"
                android:layout_height="6dp"/>
        </RelativeLayout>
    </LinearLayout>
</layout>
