<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_common="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="frag_acct_regist"
            type="String" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/icon_hv_back"
            android:layout_marginTop="20dp"
            android:id="@+id/ftv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingBottom="2.5dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2.5dp"
            android:textColor="@color/color_title_select"
            android:textSize="17sp"
            android:visibility="visible" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_marginTop="100dp"
                    android:text="新用户注册"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <com.siweisoft.heavycenter.module.view.input.EditLoginAcctItem
                    android:id="@+id/phone"
                    style_common:txt_mid = "请输入手机号"
                    style_common:iv_left="@drawable/icon_hv_phone"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
                <com.siweisoft.heavycenter.module.view.input.CodeInputAcctItem
                    android:visibility="gone"
                    style_common:iv_left="@drawable/icon_hv_securtycode"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:background="@drawable/drawable_bg_edit"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/icon_hv_phone"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <EditText
                        android:id="@+id/securycode"
                        android:singleLine="true"
                        android:textColorHint="@color/color_grey_700"
                        android:hint="请输入验证码"
                        android:paddingLeft="10dp"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:background="@color/transparent"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/code"
                        android:gravity="center_vertical|right"
                        android:text="获取验证码"
                        android:textSize="15sp"
                        android:textColor="@color/color_hv_yelll"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_hv_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <com.siweisoft.heavycenter.module.view.input.EditLoginAcctItem
                    android:id="@+id/pwd"
                    style_common:txt_mid = "请输入密码"
                    style_common:iv_left="@drawable/icon_hv_pwd"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
                <com.siweisoft.heavycenter.module.view.input.EditLoginAcctItem
                    android:id="@+id/repwd"
                    style_common:txt_mid = "重复密码"
                    style_common:iv_left="@drawable/icon_hv_pwd"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.siweisoft.heavycenter.module.view.check.CheckIV
                        android:id="@+id/iv_check"
                        android:src="@drawable/bg_hv_check"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:text="我已阅读并"
                    android:textColor="@color/white"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="13sp"
                        android:text="同意《重心用户协议》"
                        android:textColor="@color/color_hv_yelll"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <TextView
                    android:id="@+id/regist"
                    android:text="注册"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/drawable_hv_bg_btn_login"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>
