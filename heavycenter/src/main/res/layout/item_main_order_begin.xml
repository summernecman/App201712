<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="item_main_order_begin"
            type="com.siweisoft.heavycenter.data.netd.order.list.OrdersRes.ResultsBean" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe"
        android:background="@drawable/bg_hv_sel_dark_light"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="@{item_main_order_begin.productName}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="@{item_main_order_begin.specification}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"/>
                    <TextView
                        android:background="@drawable/bg_hv_sel_yel_blue_stroke"
                        android:singleLine="true"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/color_yell_blue"
                        android:textSize="8.5sp"
                        android:text='@{"计划: "+item_main_order_begin.planNumber}'
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_type"
                android:background="@drawable/bg_hv_sharp2_blue_solid"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="@{item_main_order_begin.shdwName}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_plantime"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/color_hv_txt_dark"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</layout>
