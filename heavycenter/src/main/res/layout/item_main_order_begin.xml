<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_common="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="item_main_order_begin"
                type="com.siweisoft.heavycenter.data.netd.order.list.OrdersRes.ResultsBean" />
    </data>

    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/ll_neworder"
                   android:background="@drawable/bg_hv_sel_dark_light"
                   android:padding="@dimen/dimen_recylce_item_margin">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/dimen_recylce_item_padding"
    >

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_recylce_item_title_txtsize"
                            android:text="@{item_main_order_begin.productName}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    <TextView
                            android:singleLine="true"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_recylce_item_subtitle_txtsize"
                            android:text="@{item_main_order_begin.specification}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"/>
                    <TextView
                            android:id="@+id/tv_planmun"
                            android:background="@drawable/bg_hv_sel_yel_blue_stroke"
                            android:singleLine="true"
                            android:layout_marginLeft="7dp"
                            android:textColor="@color/color_yell_blue"
                            android:textSize="12sp"
                            android:text='@{"计划: "+item_main_order_begin.planNumber}'
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_type"
                    android:background="@drawable/bg_hv_sharp2_blue_solid"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/tv_duimian"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_recylce_item_subtitle_txtsize"
                    android:text="@{item_main_order_begin.shdwName}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
            <TextView
                    android:paddingLeft="5dp"
                    android:id="@+id/tv_plantime"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="bottom|right"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_hv_txt_dark"
                    android:textSize="@dimen/dimen_recylce_item_date_txtsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_frag_padding"
            android:visibility="visible"
            android:id="@+id/ll_menu"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
        <com.siweisoft.heavycenter.module.view.text.BgTextView
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:id="@+id/bt_sure"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:visibility="visible"
            style_common:color_one="@color/color_hv_yelll"
            style_common:stroke="0dp"
            style_common:color_stroke="@color/red"
            style_common:corner="5dp"
            style_common:color_txt="@color/white"

            style_common:color_two="@color/color_red_800"
            style_common:stroke_two="2dp"
            style_common:color_stroke_two="@color/color_hv_yelll"
            style_common:corner_two="5dp"
            style_common:color_txt_two="@color/white"
            style_common:boo_one="false"
            android:text="接受"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <com.siweisoft.heavycenter.module.view.text.BgTextView
                android:layout_gravity="right"
                android:id="@+id/bt_reject"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:visibility="visible"
                style_common:color_one="@color/color_hv_yelll"
                style_common:stroke="0dp"
                style_common:color_stroke="@color/red"
                style_common:corner="5dp"
                style_common:color_txt="@color/white"

                style_common:color_two="@color/color_red_800"
                style_common:stroke_two="2dp"
                style_common:color_stroke_two="@color/color_hv_yelll"
                style_common:corner_two="5dp"
                style_common:color_txt_two="@color/white"
                style_common:boo_one="false"
                android:text="拒绝"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</layout>
