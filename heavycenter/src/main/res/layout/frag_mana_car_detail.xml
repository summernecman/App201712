<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_common="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="frag_mana_car_detail"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/color_grey_200"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.android.lib.view.title.TitleView
            android:id="@+id/title"
            style_common:iv_left ="@drawable/icon_hv_back"
            style_common:iv_right ="@drawable/icon_hv_scan"
            style_common:iv_right2 ="@drawable/icon_hv_save"
            style_common:txt_mid ="车辆详情"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
            app:srlEnablePureScrollMode="true"
            app:srlDragRate="0.2"
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/ll_input"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.siweisoft.heavycenter.module.view.item.NewUnitMyceItem
            android:id="@+id/item_carlicenseno"
            android:paddingRight="100dp"
            style_common:txt_maxlenth="7"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            style_common:txt_left = "车牌号"
            style_common:txt_mid = "请输入内容"
            style_common:boo_edit = "true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <com.siweisoft.heavycenter.module.view.text.BgTextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:alpha="0.5"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:id="@+id/reinput"
                android:text="重新输入"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:singleLine="true"
                android:textSize="15sp"
                android:visibility="visible"
                style_common:color_one="@color/color_hv_yelll"
                style_common:stroke="0dp"
                style_common:color_stroke="@color/red"
                style_common:corner="20dp"
                style_common:color_txt="@color/white"

                style_common:color_two="@color/color_grey_400"
                style_common:stroke_two="0dp"
                style_common:color_stroke_two="@color/color_hv_yelll"
                style_common:corner_two="20dp"
                style_common:color_txt_two="@color/color_hv_yelll"
                style_common:boo_one="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_vehiclePhoto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_hv_sharp2_gray_stroke"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_vehiclePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_hv_car" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传车辆照片"
                    android:textColor="@color/color_hv_txt_dark"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_vehicleLicensePhoto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_hv_sharp2_gray_stroke"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_vehicleLicensePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_hv_driveid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传驾驶证照片"
                    android:textColor="@color/color_hv_txt_dark"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <com.siweisoft.heavycenter.module.view.item.NewUnitMyceItem
            android:id="@+id/item_brand"
            android:layout_marginTop="10dp"
            style_common:txt_left = "品牌名称"
            style_common:txt_mid = "请输入"
            style_common:boo_edit = "true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.siweisoft.heavycenter.module.view.item.NewUnitMyceItem
                style_common:inputType="3"
                android:id="@+id/item_emptyweight"
                style_common:txt_maxlenth="8"
                style_common:txt_left = "车辆自重"
                style_common:txt_mid = "请输入"
                style_common:boo_edit = "true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="17sp"
                android:textColor="@color/color_hv_yelll"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.siweisoft.heavycenter.module.view.item.NewUnitMyceItem
                style_common:inputType="3"
                style_common:txt_maxlenth="8"
                android:id="@+id/item_maxweight"
                style_common:txt_left = "车辆载重"
                style_common:txt_mid = "请输入"
                style_common:boo_edit = "true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="17sp"
                android:textColor="@color/color_hv_yelll"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <com.siweisoft.heavycenter.module.view.item.NewUnitMyceItem
            android:id="@+id/item_iccard"
            style_common:txt_maxlenth="20"
            style_common:txt_left = "车辆IC卡号"
            style_common:txt_mid = "请输入"
            style_common:boo_edit = "true"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <com.siweisoft.heavycenter.module.view.item.NewUnitMyceItem
            android:layout_marginTop="10dp"
            android:background="@color/white"
            style_common:txt_left = "选择当前驾驶员"
            style_common:txt_mid = "请输入"
            style_common:boo_edit = "false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="1dp"
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>
</layout>
