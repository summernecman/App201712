<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
                name="item_main_order_detail_begin"
                type="com.siweisoft.heavycenter.data.netd.order.list.OrdersRes.ResultsBean" />
    </data>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:style_common="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:id="@+id/ll_neworder"
        >

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_productName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_recylce_item_title_txtsize"
            android:text="@{item_main_order_detail_begin.productName}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:includeFontPadding="false"
            app:layout_constraintLeft_toRightOf="@+id/tv_productName"
            app:layout_constraintBottom_toBottomOf="@+id/tv_productName"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_recylce_item_title_txtsize"
            android:text="@{item_main_order_detail_begin.specification}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_productName"
            android:id="@+id/tv_planmun"
            android:background="@drawable/bg_hv_sel_yel_blue_stroke"
            android:singleLine="true"
            android:textColor="@color/color_yell_blue"
            android:textSize="12sp"
            android:text='@{"计划: "+item_main_order_detail_begin.planNumber}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="1dp"
            android:includeFontPadding="false"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_productName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_type"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="来自"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="13dp"
            android:includeFontPadding="false"
           app:layout_constraintLeft_toRightOf="@+id/tv_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_productName"
            android:id="@+id/tv_duimian"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_recylce_item_subtitle_txtsize"
            android:text="@{item_main_order_detail_begin.shdwName}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:includeFontPadding="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_duimian"
            android:id="@+id/tv_plantime"
            android:layout_gravity="right|center_vertical"
            android:gravity="bottom|right"
            android:singleLine="true"
            android:textColor="@color/color_hv_txt_dark"
            android:textSize="@dimen/dimen_recylce_item_date_txtsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </android.support.constraint.ConstraintLayout>
</layout>
