<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="item_main_order_done"
            type="com.siweisoft.heavycenter.data.netd.order.list.OrdersRes.ResultsBean" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe"
        android:background="@drawable/bg_hv_sel_dark_light"
        android:orientation="vertical"
                  android:padding="@dimen/dimen_recylce_item_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_goodname"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_recylce_item_title_txtsize"
                        android:text="混凝土"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_spes"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_recylce_item_subtitle_txtsize"
                        android:text="D150"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_type"
                        android:background="@drawable/bg_hv_sharp2_blue_solid"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:text="来自"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_companyname"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_recylce_item_subtitle_txtsize"
                        android:text="上海绿地"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_hv_sharp2_yell_stroke"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_carno"
                    android:singleLine="true"
                    android:textColor="@color/color_base_txt_heavycenter_y"
                    android:textSize="12sp"
                    android:text=" 沪A2345 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/tv_plan"
                        android:singleLine="true"
                        android:textColor="@color/color_base_txt_heavycenter_y"
                        android:textSize="12sp"
                        android:text=" 沪A2345 "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom|left"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="实发："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_sf"
                    android:layout_gravity="bottom|left"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="2000t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="bottom"
                    android:gravity="bottom|right"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="实收："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_ss"
                    android:layout_gravity="bottom|left"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:text="2000t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:gravity="right"
                android:layout_gravity="bottom|right"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="bottom"
                    android:gravity="bottom|right"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="盈亏："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_yk"
                    android:layout_gravity="bottom|right"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="2000t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
