<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:DashView="http://schemas.android.com/apk/res-auto"
    xmlns:style_common="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item_main_trans2"
            type="com.siweisoft.heavycenter.data.netd.trans.detail.TransDetailRes" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_trans"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
                  android:background="@drawable/bg_hv_sel_dark_light"
        android:foreground="?android:attr/selectableItemBackground"
        >
        <RelativeLayout
            android:src="@drawable/icon_hv_myce_car"
            android:layout_width="90dp"
            android:layout_height="match_parent" >

            <com.siweisoft.heavycenter.module.view.circle.CircleBar
                android:layout_margin="5dp"
                android:id="@+id/circlebar"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@id/circlebar"
                android:maxWidth="100dp"
                android:singleLine="true"
                android:id="@+id/tv_totalnum"
                android:text="3t"
                android:textSize="25sp"
                android:textColor="@color/color_yell_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/tv_totalnum"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:id="@+id/tv_carnum"
                android:text="10车"
                android:textSize="15sp"
                android:textColor="@color/color_yell_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_recylce_item_title_txtsize"
                    android:text="@{item_main_trans2.productName}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_recylce_item_subtitle_txtsize"
                    android:text="@{item_main_trans2.specifications}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_hv_local"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom"
                    android:id="@+id/tv_carlicenseno"
                    android:background="@drawable/bg_hv_sharp1_yell_stroke"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_base_txt_heavycenter_y"
                    android:textSize="12sp"
                    android:text="@{item_main_trans2.carLicenseNo}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="bottom"
                    android:id="@+id/tv_dirvername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_recylce_item_subtitle_txtsize" />


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/ll_send"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_send_comname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_recylce_item_subtitle_txtsize" />


                    <com.siweisoft.heavycenter.module.view.text.BgTextView
                        android:includeFontPadding="false"
                        android:id="@+id/send_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="1dp"
                        android:singleLine="true"
                        android:text="发货"
                        android:textSize="13sp"
                        android:visibility="visible"
                        style_common:boo_one="false"
                        style_common:color_one="@color/color_hv_yelll"

                        style_common:color_stroke="@color/red"
                        style_common:color_stroke_two="@color/color_hv_yelll"
                        style_common:color_two="@color/color_red_800"
                        style_common:color_txt="@color/white"
                        style_common:color_txt_two="@color/white"
                        style_common:corner="2dp"
                        style_common:corner_two="5dp"
                        style_common:stroke="0dp"
                        style_common:stroke_two="2dp" />


                    <TextView
                        android:id="@+id/tv_sendnum"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_recylce_item_subtitle_txtsize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:gravity="right|center_vertical"
                        android:id="@+id/tv_send_time"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_hv_txt_dark"
                        android:textSize="@dimen/dimen_recylce_item_date_txtsize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/ll_receipt"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_receipt_comname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_recylce_item_subtitle_txtsize" />


                    <com.siweisoft.heavycenter.module.view.text.BgTextView
                        android:includeFontPadding="false"
                        android:id="@+id/receipt_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="1dp"
                        android:singleLine="true"
                        android:text="收货"
                        android:textSize="13sp"
                        android:visibility="visible"
                        style_common:boo_one="false"
                        style_common:color_one="@color/color_hv_yelll"

                        style_common:color_stroke="@color/red"
                        style_common:color_stroke_two="@color/color_hv_yelll"
                        style_common:color_two="@color/color_red_800"
                        style_common:color_txt="@color/white"
                        style_common:color_txt_two="@color/white"
                        style_common:corner="2dp"
                        style_common:corner_two="5dp"
                        style_common:stroke="0dp"
                        style_common:stroke_two="2dp" />


                    <TextView
                        android:id="@+id/tv_receiptnum"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_recylce_item_subtitle_txtsize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:gravity="right|center_vertical"
                        android:id="@+id/tv_receipt_time"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_hv_txt_dark"
                        android:textSize="@dimen/dimen_recylce_item_date_txtsize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.siweisoft.heavycenter.module.view.text.BgTextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/bt_sure"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:visibility="visible"
                        style_common:color_one="@color/color_hv_yelll"
                        style_common:stroke="0dp"
                        style_common:color_stroke="@color/red"
                        style_common:corner="5dp"
                        style_common:color_txt="@color/white"

                        style_common:color_two="@color/color_red_800"
                        style_common:stroke_two="2dp"
                        style_common:color_stroke_two="@color/color_hv_yelll"
                        style_common:corner_two="5dp"
                        style_common:color_txt_two="@color/white"
                        style_common:boo_one="false"
                        android:text="完成"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</layout>
