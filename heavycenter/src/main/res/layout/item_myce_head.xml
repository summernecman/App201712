<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_common="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item_myce_head"
            type="String" />
    </data>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/color_base"
            android:layout_height="230dp">
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/icon_hv_myce_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.android.lib.view.title.TitleView
                    android:id="@+id/title"
                    style_common:color_bg ="@color/transparent"
                    style_common:iv_left ="@drawable/icon_hv_back"
                    style_common:iv_right ="@drawable/icon_hv_myce_code"
                    style_common:iv_right2 ="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/icon_hv_myce_head"
                        android:layout_width="130dp"
                        android:layout_height="130dp" />

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="13dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:singleLine="true"
                                android:layout_weight="1"
                                android:id="@+id/tv_name"
                                android:text="11111111"
                                android:textSize="23sp"
                                android:textColor="@color/white"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:layout_marginRight="5dp"
                                android:id="@+id/iv_nameedit"
                                android:layout_marginLeft="25dp"
                                android:src="@drawable/icon_hv_myce_edit"
                                android:layout_width="17dp"
                                android:layout_height="17dp" />
                        </LinearLayout>

                        <TextView
                            android:singleLine="true"
                            android:id="@+id/tv_role"
                            android:text="管理员"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:singleLine="true"
                            android:id="@+id/tv_phone"
                            android:layout_marginTop="10dp"
                            android:text="18741414141"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
</layout>
