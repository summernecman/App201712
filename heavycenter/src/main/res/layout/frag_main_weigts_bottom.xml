<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:style_common="http://schemas.android.com/apk/res-auto"
    xmlns:style_toptypeview="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="frag_main_weigts_bottom"
            type="String" />
    </data>


    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="588dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_hv_sharp5_white_solid"
        android:elevation="2dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="系统自动识别当前驾驶员去送货"
            android:textColor="@color/color_grey_500"
            android:textSize="@dimen/hv_dimen_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_select"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_hv_sharp2_yell_solid"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp"
            android:text="重新选择"
            android:textColor="@color/white"
            android:textSize="@dimen/hv_dimen_text_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.siweisoft.heavycenter.module.view.circle.CircleBar
            android:id="@+id/circlebar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_goodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:includeFontPadding="false"
            android:text="2333"
            android:textColor="@color/black"
            android:textSize="@dimen/hv_dimen_text_title_aaaa"
            app:layout_constraintLeft_toRightOf="@+id/circlebar"
            app:layout_constraintTop_toTopOf="@+id/circlebar" />

        <TextView
            android:id="@+id/tv_spes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:includeFontPadding="false"
            android:text="2333"
            android:textColor="@color/black"
            android:textSize="@dimen/hv_dimen_text_title_aaaa"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_goodname"
            app:layout_constraintBottom_toBottomOf="@+id/tv_goodname"
            app:layout_constraintLeft_toRightOf="@+id/tv_goodname" />


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_hv_sharp2_yell_solid"
            android:text="发往"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_goodname"
            app:layout_constraintTop_toBottomOf="@+id/tv_goodname" />

        <TextView
            android:id="@+id/tv_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"
            android:text="上海绿地"
            android:textColor="@color/black"
            android:textSize="@dimen/hv_dimen_text_aaa"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_type"
            app:layout_constraintBottom_toBottomOf="@+id/tv_type"
            app:layout_constraintLeft_toRightOf="@+id/tv_type" />


        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/icon_hv_cancle"
            app:layout_constraintRight_toRightOf="@+id/tv_select"
            app:layout_constraintTop_toTopOf="@+id/tv_goodname" />


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circlebar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="预估发货净重"
                android:textColor="@color/color_grey_400"
                android:textSize="@dimen/hv_dimen_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="收货净重"
                android:textColor="@color/color_grey_400"
                android:textSize="@dimen/hv_dimen_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/three"
            app:layout_constraintTop_toBottomOf="@+id/circlebar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="10t"
                android:textColor="@color/color_grey_400"
                android:textSize="@dimen/hv_dimen_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="13t"
                android:textColor="@color/color_grey_400"
                android:textSize="@dimen/hv_dimen_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/four"
            app:layout_constraintTop_toBottomOf="@+id/circlebar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="预估发货毛重"
                android:textColor="@color/color_grey_400"
                android:textSize="@dimen/hv_dimen_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="收货毛重"
                android:textColor="@color/color_grey_400"
                android:textSize="@dimen/hv_dimen_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/one"
            app:layout_constraintTop_toBottomOf="@+id/circlebar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="10t"
                android:textColor="@color/color_grey_400"
                android:textSize="@dimen/hv_dimen_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="10t"
                android:textColor="@color/color_grey_400"
                android:textSize="@dimen/hv_dimen_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circlebar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="01/15 10:10"
                android:textColor="@color/color_grey_400"
                android:textSize="@dimen/hv_dimen_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="01/15 10:10"
                android:textColor="@color/color_grey_400"
                android:textSize="@dimen/hv_dimen_text" />
        </LinearLayout>

        <com.siweisoft.heavycenter.module.view.text.BgTextView
            app:layout_constraintTop_toBottomOf="@+id/three"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingBottom="5dp"

            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="保存"
            android:textSize="21sp"
            android:visibility="visible"

            style_common:boo_one="true"
            style_common:color_one="@color/color_hv_yelll"
            style_common:color_stroke="@color/red"
            style_common:color_stroke_two="@color/color_red_500"
            style_common:color_two="@color/color_red_500"
            style_common:color_txt="@color/white"
            style_common:color_txt_two="@color/white"
            style_common:corner="5dp"
            style_common:corner_two="5dp"
            style_common:stroke="0dp"
            style_common:stroke_two="2dp" />
    </android.support.constraint.ConstraintLayout>
</layout>
