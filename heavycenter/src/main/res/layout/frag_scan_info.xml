<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_common="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="frag_scan_info"
            type="com.siweisoft.heavycenter.data.netd.acct.login.LoginResBean" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#e0000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_hv_sharp5_white_solid"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/icon_hv_close"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        <LinearLayout
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="40dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:text="@{frag_scan_info.trueName}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_grey_600"
                android:layout_marginTop="1dp"
                android:text="@{frag_scan_info.tel}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:textColor="@color/color_grey_600"
                android:layout_marginTop="1dp"
                android:text="@{frag_scan_info.companyName}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_marginTop="20dp"
                android:layout_width="180dp"
                android:layout_height="180dp" />

            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:text="扫一扫我的二维码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>
