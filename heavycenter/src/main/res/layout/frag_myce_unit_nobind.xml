<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:style_common="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="frag_myce_unit_nobind"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <com.android.lib.view.title.TitleView
            android:id="@+id/title"
            style_common:txt_mid ="绑定单位"
            style_common:iv_right ="@drawable/icon_hv_scan"
            style_common:iv_left ="@drawable/icon_hv_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/icon_hv_myce_unit_nobind"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="请绑定单位"
                    android:textSize="15sp"
                    android:textColor="@color/color_grey_500"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/bind"
                    android:text="立刻绑定"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/drawable_hv_bg_btn_login"
                    android:layout_marginTop="40dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
