<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:DashView="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item_main_trans"
            type="String" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_trans"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <LinearLayout
            android:background="@color/color_item_main_trans_dark"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/icon_hv_myce_car"
            android:layout_width="90dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:background="@color/color_item_main_trans_light"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="混凝土"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:singleLine="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="C30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
                <ImageView
                    android:src="@drawable/icon_hv_local"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_base_txt_heavycenter_y"
                    android:textSize="14sp"
                    android:text="沪A2345"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="驾驶员"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="发往"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="发往"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="12/09 10:10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="上海绿地"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:singleLine="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/color_base_txt_yellow"
                    android:textSize="18sp"
                    android:text="0t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/drawable_hv_bg_btn_login"
                    android:singleLine="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="确认"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        <com.android.lib.view.line.view.VerticalDashView
            android:layout_marginLeft="90dp"
            android:layout_alignParentBottom="true"
            DashView:dashgap = "2dp"
            DashView:w = "1dp"
            DashView:hashwidth = "2dp"
            DashView:dashcolor = "@color/gray"
            android:layout_width="1dp"
            android:layout_height="match_parent"  />

        <com.android.lib.view.line.view.HorizonDashView
            android:layout_alignParentBottom="true"
            DashView:dashgap = "2dp"
            DashView:hashwidth = "2dp"
            DashView:dashcolor = "@color/white"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <com.siweisoft.heavycenter.module.view.circle.UpCircleView
            android:layout_marginLeft="85dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />


        <com.siweisoft.heavycenter.module.view.circle.DownCircleView
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="85dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </RelativeLayout>
</layout>
